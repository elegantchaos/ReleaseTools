{
  "swift.actionAfterBuildError": "Focus Problems",
  "swift.autoGenerateLaunchConfigurations": false,
  "swift.sourcekit-lsp.backgroundIndexing": "on",
  "swift.backgroundCompilation": true,
  "swift.showBuildStatus": "progress",
  "swift.diagnosticsStyle": "default",
  "swift.diagnosticsCollection": "keepSwiftc",
  "[swift]": {
    "editor.defaultFormatter": "swiftlang.swift-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "editor.tabSize": 2,
  "editor.useTabStops": false,
  "git.ignoreLimitWarning": true,
  "npm.autoDetect": "off",
  "explorer.excludeGitIgnore": true,
  "search.useIgnoreFiles": true,
  "swift.searchSubfoldersForPackages": true,
  "swift.excludePathsFromPackageDependencies": ["**/.git", "**/.github"]
}
